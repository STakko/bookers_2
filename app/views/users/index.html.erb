<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: current_user %>
      <%= render 'books/new', book: Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table>
          <thead>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= link_to "show", user_path(user.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>