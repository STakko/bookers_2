<h1>User info</h1>

<% if @user.errors.any? %>
  <div id="error">
    <h3><%=@user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <%end%>
    </ul>
  </div>
<%end%>

<%= form_with model:@user, local:true do |f| %>
  <div class="field">
    <label for="inputName">name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  </div>
  <div class="field">
    <label for="inputImage">Image</label><br>
    <%= f.attachment_field :profile_image, placeholder: "Image" %>
  </div>
  <div class="field">
  <label for="inputIntrodution">Introduction</label><br>
  <%= f.text_area :introdution, autofocus:true, id:"inputIntrodution", placeholder:"Introduction" %>
  </div>
  <br>
  <%= f.submit ' Update User ' %>
  <% end %>