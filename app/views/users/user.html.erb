<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 63, 63, fallback: "no_image.jpg %>
  <table>
    <tbody>
      <tr>
        <td>Name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>Introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path, class:"btn btn-outline-secondary btn-block fas fa-user-cog Url" %>