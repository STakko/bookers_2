<h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <label for="title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <label for="body">Opinion</label><br>
    <%= f.text_area :body %>
  </div>
  <br>
    <%= f.submit ' Create Book ' %>
  <% end %>