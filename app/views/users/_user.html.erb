<br>
<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 63, 63, fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>Name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' do %><% end %>
  </div>