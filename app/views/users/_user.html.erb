<br>
<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 63, 63, fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>Name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= user.followings.count %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= user.followers.count %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationship_path(user.id), method: :delete, class: "btn btn-info" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-succuess" %>
      <% end %>
    <% else %>
      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' do %><% end %>
    <% end %>
  </div>