<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <br>
      <h1>Editing Book</h1><br>

      <% if @book.errors.any? %>
        <div id="error">
          <h3><%=@book.errors.count %>errors prohibited this book from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <%end%>
          </ul>
        </div>
      <%end%>

      <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
      <label for="title">Title</label><br>
      <%= f.text_field :title, size: '58x1' %><br>
      <br>
      <label for="body">Opinion</label><br>
      <%= f.text_area :body, size: '60x3' %><br>
      <br>
      <%= f.submit ' Update Book ', class: "btn btn-success" %>
      <% end %>
      <br>
      <p class="link">
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
      </p>
    </div>
  </div>
</div>
