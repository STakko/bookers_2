
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @book.user %>
      <%= render 'books/new', book: Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <br>
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 55, fallback: "no_image.jpg", size: '40x40' %>
                  <% end %>
                  <br>
                  <%= link_to @book.user.name, user_path(@book.user.id) %>
                </td>
                <td>
                  <%= link_to @book.title, book_path(@book.id) %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <td>
                  <% if @book.favorited_by?(current_user) %>
                    <p><%= link_to book_favorites_path(@book), method: :delete do %>♥<%= @book.favorites.count %><% end %></p>
                  <% else %>
                    <p><%= link_to book_favorites_path(@book), method: :post do %>♡<%= @book.favorites.count %><% end %></p>
                  <% end %>
                </td>
                <td><p>コメント:<%= @book.comments.count %>件</p></td>
                <% if @book.user.id == current_user.id %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
                </td>
                <% else %>
                <td colspan="3"></td>
                <td></td>
                <td></td>
                <% end %>
              </tr>
          </tbody>
        </table>
        <table>
          <% @book.comments.each do |comment| %>
          <tr>
            <td><%= attachment_image_tag comment.user, :profile_image, :fill, 40, 55, fallback: "no_image.jpg", size: '40x40' %><%= comment.user.name %></td>
            <td><%= comment.comment %></td>
            <% if current_user.id == comment.user_id %>
            <td><%= link_to "destroy", book_bookcomment_path(comment.book_id, comment.id), class: 'btn-sm btn-danger', method: :delete %></td>
            <% end %>
          </tr>
          <% end %>
        </table>
        <div>
          <%= form_with model:[@book,@comment], url: book_bookcomments_path(@book.id), local:true do |f| %>
            <%= f.text_area :comment, size:"90x5" %><br>
            <%= f.submit "送信" %>
          <% end %>
        </div>
    </div>
  </div>
</div>