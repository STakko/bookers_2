<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>

      <% if @user.errors.any? %>
        <div id="error">
          <h3><%=@user.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <%end%>
          </ul>
        </div>
      <%end%>

      <%= form_with model:@user, local:true do |f| %>
      <div class="field">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", size: "58x1" %>
      </div>
      <br>
      <div class="field">
        <label for="inputImage">Image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "Image" %>
      </div>
      <br>
      <div class="field">
        <label for="inputIntrodution">Introduction</label><br>
        <%= f.text_area :introdution, autofocus:true, id:"inputIntrodution", placeholder:"Introduction", size: "60x3" %>
      </div>
      <br>
      <%= f.submit ' Update User ', class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>